<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/testView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtString"
        android:text=""
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtString"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/testView1"
        android:layout_alignParentBottom="true"
        android:text=""
        android:textSize="15sp" />

    <Button
        android:id="@+id/buttonOn"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView5"
        android:text="ON" />

    <Button
        android:id="@+id/buttonOff"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/txtLight"
        android:text="OFF" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonOn"
        android:layout_alignParentStart="true"
        android:text="Lights"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnHSpeed"
        android:layout_alignParentStart="true"
        android:text="Speed"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnHSpeed"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonOn"
        android:layout_below="@+id/buttonOn"
        android:text="High" />

    <Button
        android:id="@+id/btnLSpeed"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonOff"
        android:layout_below="@+id/buttonOn"
        android:text="Low" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnFStart"
        android:layout_alignParentStart="true"
        android:text="Follow a Line"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFStart"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonOn"
        android:layout_below="@+id/textView2"
        android:text="Start" />

    <Button
        android:id="@+id/btnFStop"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/buttonOn"
        android:text="Stop" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnForward"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:text="Controls"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonOff"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/btnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/testView1"
        android:layout_toEndOf="@+id/buttonOff"
        app:srcCompat="@drawable/right" />

    <ImageButton
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/testView1"
        android:layout_alignEnd="@+id/buttonOff"
        app:srcCompat="@drawable/stop" />

    <ImageButton
        android:id="@+id/btnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBack"
        android:layout_toStartOf="@+id/btnBack"
        app:srcCompat="@drawable/left" />

    <ImageButton
        android:id="@+id/btnForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnRight"
        android:layout_alignStart="@+id/btnBack"
        app:srcCompat="@drawable/forward" />

    <TextView
        android:id="@+id/txtLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonOn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="42dp"
        android:text="Off"
        android:textColor="?attr/colorError"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/buttonOff"
        android:text="Low"
        android:textColor="?attr/colorError"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/buttonOff"
        android:text="Stop"
        android:textColor="?attr/colorError"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtControls"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Stop"
        android:textAlignment="textEnd"
        android:textColor="?attr/colorError"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnPLOpen"
        android:layout_alignParentStart="true"
        android:text="Lock"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPLOpen"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonOn"
        android:layout_below="@+id/textView3"
        android:text="Open" />

    <Button
        android:id="@+id/btnPLClose"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/buttonOn"
        android:text="Close" />

    <TextView
        android:id="@+id/txtPrimaryLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPLOpen"
        android:layout_toEndOf="@+id/buttonOff"
        android:text="Close"
        android:textColor="?attr/colorError"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="221dp"
        android:text="Weight"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtWeight"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView15"
        android:textSize="24sp" />

</RelativeLayout>